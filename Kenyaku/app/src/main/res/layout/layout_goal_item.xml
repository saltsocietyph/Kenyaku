<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/goalTypeIcon"
        android:layout_width="66dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/piggy_bank" />

    <ImageView
        android:id="@+id/textBackground"
        android:layout_width="189dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/goalTypeIcon"
        android:layout_marginEnd="22dp"
        app:srcCompat="@drawable/message_border" />

    <TextView
        android:id="@+id/goalNameText"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="35dp"
        android:text="Goal Name"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/goalNameText"
        android:layout_below="@+id/goalNameText"
        android:text="Date"
        android:textColor="@android:color/background_light"
        android:textSize="12sp" />
</RelativeLayout>
